<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox fx:id="pantalla" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" stylesheets="@styles.css"
      fx:controller="org.example.carreracochesinterfaz.Controladores.ControladorCarrera">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button fx:id="btn_iniciar" text="INICIAR" prefWidth="200" prefHeight="50" maxWidth="200" maxHeight="50"/>

    <VBox fx:id="pantalla_carrera" prefWidth="500" maxWidth="500" prefHeight="700" maxHeight="700">

        <HBox spacing="400.0" alignment="CENTER">
            <Label fx:id="salida" text="Salida" prefWidth="300" maxWidth="300"/>
            <Label fx:id="meta" text="Meta" prefWidth="300" maxWidth="300"/>


        </HBox>
        <VBox spacing="80.0" alignment="CENTER_LEFT" prefWidth="280" maxWidth="280" prefHeight="680" maxHeight="680">
            <Label fx:id="Mario" styleClass="coche" text="Mario"/>
            <Label fx:id="Luigi" styleClass="coche" text="Luigi"/>
            <Label fx:id="Bowser" styleClass="coche" text="Bowser"/>
            <Label fx:id="Toad" styleClass="coche" text="Toad"/>
            <Label fx:id="Peach" styleClass="coche" text="Peach"/>

        </VBox>
    </VBox>


</VBox>
